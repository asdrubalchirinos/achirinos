---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Projects">
    <h1 class="font-medium text-2xl mb-8 tracking-tighter">projects</h1>
    <div class="grid grid-cols-1 gap-4">
        <a
            href="https://www.codigoergosum.com"
            target="_blank"
            class="border border-neutral-200 dark:border-neutral-800 rounded flex items-center justify-between px-3 py-4 w-full hover:bg-neutral-100 dark:hover:bg-neutral-900 transition-colors"
        >
            <div class="flex flex-col">
                <p class="font-medium text-neutral-900 dark:text-neutral-100">
                    CodigoErgoSum
                </p>
                <p class="text-neutral-600 dark:text-neutral-400">
                    My personal blog where I write about technology and life.
                </p>
            </div>
            <div
                class="text-neutral-700 dark:text-neutral-300 transform transition-transform duration-300 group-hover:-rotate-12"
            >
                ↗
            </div>
        </a>

        <a
            href="/en/p1-express"
            class="border border-neutral-200 dark:border-neutral-800 rounded flex items-center justify-between px-3 py-4 w-full hover:bg-neutral-100 dark:hover:bg-neutral-900 transition-colors"
        >
            <div class="flex flex-col">
                <p class="font-medium text-neutral-900 dark:text-neutral-100">
                    P1 Express
                </p>
                <p class="text-neutral-600 dark:text-neutral-400">
                    A current project I am working on.
                </p>
            </div>
            <div
                class="text-neutral-700 dark:text-neutral-300 transform transition-transform duration-300 group-hover:-rotate-12"
            >
                ↗
            </div>
        </a>
    </div>
</Layout>
