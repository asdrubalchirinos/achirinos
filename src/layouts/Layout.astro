---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
    title?: string;
    description?: string;
    lang?: string;
}

const {
    title = "Asdr√∫bal Chirinos",
    description = "Vision Architect | Bridging Business and Code.",
    lang = "en",
} = Astro.props;
---

<!doctype html>
<html lang={lang}>
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body
        class="bg-gray-50 dark:bg-black text-gray-900 dark:text-gray-100 antialiased max-w-2xl mb-40 flex flex-col md:flex-row mx-4 mt-8 lg:mx-auto"
    >
        <main class="flex-auto min-w-0 mt-6 flex flex-col px-2 md:px-0">
            <Header lang={lang} />
            <slot />
            <Footer lang={lang} />
        </main>
    </body>
</html>
